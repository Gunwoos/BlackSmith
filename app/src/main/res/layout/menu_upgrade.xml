<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PopupUpgrade"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Upgrade"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Lv."
            android:textColor="#000000"
            android:background="@drawable/xml_border"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="value"
            android:id="@+id/weaponeLevel"
            android:textColor="#000000"
            android:background="@drawable/xml_border"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/btnwp"/>

        <TextView
            android:text="value"
            android:id="@+id/weaponePower"
            android:textColor="#000000"
            android:background="@drawable/xml_border"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/btnwu"/>

        <TextView
            android:text="value"
            android:id="@+id/weaponeDia"
            android:textColor="#000000"
            android:background="@drawable/xml_border"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text=" / 100"
        android:id="@+id/weaponeNeed"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@drawable/xml_border"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/btnup"
        android:id="@+id/weaponeATK"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>