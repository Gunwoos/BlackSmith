        <service
            android:name="kr.co.company.BlackSmith_ver_02.MusicService"
            android:enabled="true" />

        <activity
            android:name="kr.co.company.BlackSmith_ver_02.PlayActivity"
            android:icon="@drawable/idle"
            android:label="BlackSmith of Legend" />
